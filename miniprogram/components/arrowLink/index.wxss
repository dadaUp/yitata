.arrow,.icon,.title {
  display: inline-block;
}

.arrow {
  height: 32rpx;
}

.icon,.title {
  vertical-align: middle;
}

.title {
  font-size: 26rpx;
  line-height: 32rpx;
  color: #818181;
  font-weight: 400;
  margin-right: 12rpx;
}

.icon {
  width: 12rpx;
  height: 36rpx;
  background: url(data:image/svg+xml;base64,) 50%/contain no-repeat;
}