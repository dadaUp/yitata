.review {
  padding: 30rpx 0;
  border-bottom: 1rpx solid rgba(0,0,0,.05);
}

.avatar {
  float: left;
  width: 60rpx;
  height: 60rpx;
  margin-right: 14rpx;
  border-radius: 50%;
}

.user {
  overflow: hidden;
}

.user .name {
  font-size: 30rpx;
  line-height: 40rpx;
  font-weight: 700;
  color: #191919;
  margin-bottom: 4rpx;
}

.user .rating {
  font-size: 0;
}

.user .ratingStars,.user .time {
  display: inline-block;
  vertical-align: middle;
}

.user .time {
  margin-left: 10rpx;
  font-size: 22rpx;
  line-height: 26rpx;
  color: silver;
}

.comment {
  width: 100%;
  font-size: 30rpx;
  line-height: 40rpx;
  color: #191919;
  margin: 16rpx 0;
}

.comment.isClamped {
  overflow: hidden;
  white-space: normal;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 6;
}

.vote {
  font-size: 22rpx;
  color: #818181;
}

.vote .icon {
  display: inline-block;
  margin-right: 8rpx;
  vertical-align: text-top;
  width: 28rpx;
  height: 32rpx;
  background: url(data:image/svg+xml;base64,) 50%/contain no-repeat;
}