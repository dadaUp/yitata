.header {
  display: -ms-flexbox;
  display: flex;
  padding-top: 16rpx;
  border-radius: 24rpx;
}

.header .cover {
  margin: 0 30rpx 16rpx 30rpx;
  width: 240rpx;
  height: 280rpx;
  border-radius: 8rpx;
}

.header .detail {
  -webkit-box-flex: 1;
  flex: 1;
  min-width: 0;
}

.header .detail .title {
  font-size: 36rpx;
  font-weight: 700;
  line-height: 1;
  color: #191919;
  display: block;
  height: 90rpx;
  margin-right: 48rpx;
}

.header .detail .sub-title {
  display: inline-block;
  font-size: 30rpx;
  line-height: 34rpx;
  color: #818181;
  margin-top: 6rpx;
}

.header .detail .meta {
  font-size: 22rpx;
  line-height: 32rpx;
  color: #818181;
  margin: 36rpx 48rpx 0 0;
  min-width: 0;
  height: 76rpx;
}

.header .detail .meta text {
  white-space: normal;
  word-break: break-all;
  word-wrap: break-word;
  display: block;
}

.operations-form {
  vertical-align: bottom;
}

.operations {
  vertical-align: bottom;
}

.header .detail .operations,.header .detail .operations .btn {
  display: -ms-flexbox;
  display: flex;
  -webkit-box-align: center;
  -ms-flex-align: center;
  align-items: center;
}

.header .detail .operations {
  margin-top: 12rpx;
  -webkit-box-pack: justify;
  -ms-flex-pack: justify;
  justify-content: space-between;
}

.header .detail .operations .btn {
  -webkit-box-flex: 1;
  flex: 1 1 140rpx;
  margin: 0 30rpx 0 0;
  padding: 0;
  height: 72rpx;
  font-size: 30rpx;
  font-weight: 700;
  line-height: 40rpx;
  color: rgba(0,0,0,.7);
  -webkit-box-pack: center;
  -ms-flex-pack: center;
  justify-content: center;
  background-color: #fff;
  border: 0 solid transparent;
  border-radius: 8rpx;
  box-shadow: 0 2rpx 0 rgba(0,0,0,.1);
  box-sizing: border-box;
  position: relative;
}

.header .detail .operations .btn::before {
  content: "";
  display: block;
  width: 32rpx;
  height: 32rpx;
  margin-right: 8rpx;
  background: no-repeat 50%;
  background-size: contain;
}

.header .detail .operations .btn::after {
  border: 0;
}

.header .detail .operations .btn text {
  display: block;
  font-size: 28rpx;
}

.header .detail .operations .btn.mark::before {
  background-image: url(data:image/svg+xml;base64,);
}

.header .detail .operations .btn.done::before {
  background-image: url(data:image/svg+xml;base64,);
}

.header .detail .operations .btn.ng {
  color: rgba(0,0,0,.2);
  background: rgba(0,0,0,.04);
}

.header .detail .operations .btn.ng::before {
  display: none;
}