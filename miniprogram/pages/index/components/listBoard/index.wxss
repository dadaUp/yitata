.collection-large {
  background-size: cover;
  background-position: 50% 50%;
  border-radius: 8rpx;
  overflow: hidden;
  margin: 0 0 30rpx;
}

.collection-large .mask {
  padding: 40rpx 40rpx 30rpx;
}

.mask {
  background-size: cover;
}

.mask-img-1 {
  background-image: url(https://636c-cloud1-2g3o2kp30d46e070-1307106551.tcb.qcloud.la/background-orange.png?sign=c34b252094c6c2a5280cbd1d9be9e0fd&t=1629989023);
}

.mask-img-2 {
  background-image: url(https://636c-cloud1-2g3o2kp30d46e070-1307106551.tcb.qcloud.la/background-green.png?sign=97916d8afb1b71bc45d2758f2c6dac45&t=1629988969);
}

.mask-img-3 {
  background-image: url(https://636c-cloud1-2g3o2kp30d46e070-1307106551.tcb.qcloud.la/background-grey.png?sign=77858a20508af5b2bd2d9b9ae0e7c71a&t=1629989039);
}

.collection-large .title {
  font-size: 42rpx;
  line-height: 44rpx;
  font-weight: 700;
  color: #fff;
  margin-bottom: 38rpx;
}

.collection-large .covers {
  font-size: 0;
}

.collection-large .cover {
  position: relative;
  box-sizing: border-box;
  width: 120rpx;
  height: 168rpx;
  border: 1rpx solid rgba(0,0,0,.05);
  border-radius: 8rpx;
  box-shadow: 2rpx 0 0 0 rgba(0,0,0,.2);
  z-index: 3;
}

.collection-large .cover-1 {
  left: -40rpx;
  z-index: 2;
}

.collection-large .cover-2 {
  left: -80rpx;
  z-index: 1;
}

.collection-large .total {
  position: relative;
  display: inline-block;
  font-size: 40rpx;
  color: hsla(0,0%,100%,.5);
  line-height: 168rpx;
  vertical-align: top;
  left: -40rpx;
  font-family: -apple-system,BlinkMacSystemFont,sans-serif;
}