.column {
    padding: 24rpx;
}

.column .hd {
    display: -ms-flexbox;
    display: flex;
    -webkit-box-pack: justify;
    -ms-flex-pack: justify;
    justify-content: space-between;
    margin-bottom: 30rpx;
}

.column .title {
    font-size: 30rpx;
    font-weight: 500;
    color: #000;
}

.column .more {
    padding-top: 5px;
    font-size: 25rpx;
    color: #000;
}

.column .more::after {
    content: "";
    display: inline-block;
    width: 12rpx;
    height: 12rpx;
    margin: -2rpx 6rpx 6rpx;
    line-height: 40rpx;
    vertical-align: middle;
    border-right: 1rpx solid #000;
    border-bottom: 1rpx solid #000;
    transform: rotate(-45deg);
}

.column .bd {
    margin: 0 -30rpx;
}

.column .bd .placeholder {
    display: inline-block;
    width: 160rpx;
    height: 224rpx;
    margin: 0 0 68rpx 30rpx;
    background: rgba(0,0,0,.05);
}