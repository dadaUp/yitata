<wxs src="../../../../wxs/subUtil.wxs" module="tools" />
<scroll-view class="collectionList" scroll-x="true">
  <block wx:if="{{books}}">
    <navigator class="collection"  wx:for="{{books}}" wx:key="isbn" url="/pages/book/index?isbn={{item.isbn}}">
        <image class="cover" src="{{item.cover}}"></image>
        <view class="title">{{tools.subString(item.title, 10)}}</view>
        <view class="author">{{item.author}}</view>
        <view class="tagList">
          <text class="tag">{{'社会心理学'}}</text>
          <text class="tag">{{'德国'}}</text>
        </view>
        <view class="summary">{{tools.subString(item.summary, 20) + '...'}}</view>
    </navigator>
    <navigator class="more-bar">
        <view class="more">{{'更多'}}</view>
    </navigator>
  </block>

</scroll-view>