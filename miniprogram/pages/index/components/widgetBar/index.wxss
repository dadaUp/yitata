.collections {
  justify-content: space-between;
  display: flex;
}

.collection {
  display: inline-block;
  height: 90rpx;
  margin-top: 20rpx;
  /* margin-left: 30rpx; */
  font-size: 0;
  border-style: solid;
  border-radius: 16rpx;
  border-color: #F5F5F5;
  background-color: #fafafa;
  border-width: 2rpx;
  justify-content: center;
}

.collections::before,.collections::after {
  content: '';
  display: block;
}

