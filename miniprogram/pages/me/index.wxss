.me{
   width: 100%;
   height: 100%;
}
.userbg{
  position: absolute;
  width: 100%;
  height: 400rpx;
  filter: blur(46rpx);
  background-size: cover;
}
.userInfo {
  position: absolute;
  width: 100%;
  height: 200px;
  display: flex;
  align-items: center;
  justify-content: center;
  flex-direction: column;
  padding: 0 30rpx;
}
.avatar{
  width: 120rpx;
  height: 120rpx;
  border-radius: 50%;
  margin-bottom: 16rpx;
  overflow:hidden;
}
.nickName{
  font-size: 40rpx;
  line-height: 48rpx;
  font-weight: 600;
  margin-bottom: 10rpx;
}
.area{
  font-size: 28rpx;
  margin-bottom: 10rpx;
}
.labels{
  display: flex;
  justify-content: center;
  align-items:center;
}
.label{
  padding: 8rpx 16rpx;
  border-radius: 24rpx;
  background-color: aliceblue;
  margin-right: 8rpx;
  font-size: 26rpx;
  line-height: 26rpx;
  color: blueviolet;
}
.content-area{
  margin-top: 500rpx;
}
.title{
  font-size: 40rpx;
  line-height: 60rpx;
  font-weight: 600;
  margin: 0 0 10rpx 30rpx;
}
.book-area{
  margin-bottom: 20rpx;
  padding: 100rpx 20rpx;
  text-align: center;
}