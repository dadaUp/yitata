<image class="bg-img"  mode="aspectFill" src="/images/个人背景1.jpg"></image>
<view class="container">
  <view class="avatar">
    <open-data type="userAvatarUrl"></open-data>
  </view>
  <view class="name">
    <open-data type="userNickName"></open-data>
  </view>
  <view class="user-item-bar">
    <view class="user-item">
      <view class="item-num">{{2}}</view>
      <view class="item-name">正在读</view>
    </view>
    <view class="user-item">
      <view class="item-num">{{10}}</view>
      <view class="item-name">已读</view>
    </view>
    <view class="user-item">
      <view class="item-num">{{10}}</view>
      <view class="item-name">收藏</view>
    </view>
  </view>
  
</view>