.container {
  background-color: #fff;
  height: 160px;
  display: flex;
  align-items: center;
  justify-content: center;
  flex-direction: column;
  margin: -140rpx 20rpx 0 20rpx;
  border-radius: 28rpx;
  z-index: 2;
}

.bg-img {
  width: 750rpx;
  height: 480rpx;
  display: block;
  background: #f5f5f5;
  z-index: 1;
}

.avatar{
  position: absolute;
  width: 120rpx;
  height: 120rpx;
  border-radius: 50%;
  margin-top: -300rpx;
  overflow: hidden;
}

.name {
  position: relative;
  font-size: 28rpx;
  font-weight: 400;
  margin-top: 20rpx;
}

.user-item-bar {
  display: flex;
  margin-top: 30rpx;
}

.user-item {
  width: 234rpx;
  text-align: center;
}

.user-item .item-num {
  font-size: 40rpx;
  font-weight: 500;
  color: #fb7813;
  line-height: 36rpx;
  margin-bottom: 28rpx;
}

.user-item .item-name {
  font-size: 24rpx;
  font-weight: 400;
  color: #333;
  line-height: 28rpx;
}
