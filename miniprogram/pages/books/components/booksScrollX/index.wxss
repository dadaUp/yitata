.collection .title .collectionList {
  width: 100%;
  white-space: nowrap;
}

/* .collectionList {
  height: 300rpx;
} */

.author,.title {
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp:1;
  padding-right: 30rpx;
}

.cover {
  float: left;
  width: 160rpx; 
  height: 200rpx;
  margin: 20rpx;
  border-style: solid;
  border-color: #F5F5F5;
  border-width: 0.1rpx;
}

.collection .title {
  font-size: 32rpx;
  font-weight: 500;
  color: #191919;
  margin: 12rpx 0 4rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  word-wrap: normal;
}

.collection .author {
  vertical-align: text-top;
  font-size: 20rpx;
  line-height: 24rpx;
  color: #6d6d6d;
  margin-top: 14rpx;
  margin-bottom: 14rpx;
}

.tagList {
  display: inline;
  width: 240rpx;
  height: 40rpx;
}

.tag {
  background-color: #EDEDED;
  font-size: 20rpx;
  height: 30rpx;
  padding-top: 2rpx;
  padding-bottom: 2rpx;
  padding-left: 16rpx;
  padding-right: 16rpx;
  margin-right: 12rpx;
  border-radius: 10rpx;
}

.summary {
  background-color: #f5f5f5;
  font-size: 20rpx;
  height: 60rpx;
  margin-top: 14rpx;
  margin-bottom: 20rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: normal;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp:2;
  padding: 4rpx 16rpx 4rpx 16rpx;
  margin-right: 8rpx;
  border-radius: 10rpx;
}

.collection {
  display: inline-block;
  width: 480rpx;
  height: 240rpx;
  margin-left: 30rpx;
  font-size: 0;
  border-style: solid;
  border-radius: 32rpx;
  border-color: #F5F5F5;
  background-color: #fff;
  border-width: 1rpx;
}

.collection .title,.collectionList {
  white-space: nowrap;
}

.collection .rating-null {
  display: inline-block;
  vertical-align: text-top;
  font-size: 18rpx;
  line-height: 24rpx;
  color: #818181;
}

.collection:last-child {
  margin-right: 30rpx;
}