/**index.wxss**/
.home{
  background-color: #eeeeee;
}
.list{
  width: 100%;
  height: 200rpx;
  padding: 18rpx;
  background-color: #fff;
  margin-bottom: 10rpx;
  overflow: hidden;
  /* text-overflow: ellipsis; */
}
.detail{
  font-size: 22rpx;
  padding-right: 30rpx;
}
.summary {
  margin-top: 5rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: normal;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp:3;
}
.author,.title {
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp:1;
  padding-right: 30rpx;
}
.list image{
  float: left;
  width: 180rpx;
  height: 200rpx;
  margin-right: 10rpx;
}
.duration {
  margin-left: 10rpx;
}
.bottom-tint {
  display: flex;
  justify-content: center;
  align-items: center;
  height: 40px;
  font-size: 14px;
  color: #9b9b9b;
}